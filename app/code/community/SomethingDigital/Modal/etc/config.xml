<?xml version="1.0"?>
<config>
    <global>
        <models>
            <somethingdigital_modal>
                <class>SomethingDigital_Modal_Model</class>
            </somethingdigital_modal>
        </models>
        <helpers>
            <somethingdigital_modal>
                <class>SomethingDigital_Modal_Helper</class>
            </somethingdigital_modal>
        </helpers>
        <blocks>
            <somethingdigital_modal>
                <class>SomethingDigital_Modal_Block</class>
            </somethingdigital_modal>
        </blocks>
    </global>
    <frontend>
        <layout>
            <updates>
                <somethingdigital_modal>
                    <file>somethingdigital_modal.xml</file>
                </somethingdigital_modal>
            </updates>
        </layout>
    </frontend>
    <default>
        <cms>
            <modal>
                <enabled>0</enabled>
                <show_after_page_views>0</show_after_page_views>
                <close_after_seconds>5</close_after_seconds>
                <cookie_duration>365</cookie_duration>
                <skip_cookie_check>0</skip_cookie_check>
                <error_message>There was an error submitting the form. Please try again.</error_message>
                <skip_if_already_subscribed>1</skip_if_already_subscribed>
                <skip_if_already_logged_in>1</skip_if_already_logged_in>
            </modal>
        </cms>
    </default>
</config>
